rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Booths: public read, admin (system_admin or photobooth_admin) can create/update/delete
    match /booths/{boothId} {
      allow read: if true;
      allow create: if request.auth != null && 
        (request.auth.token.system_admin == true || request.auth.token.photobooth_admin == true) &&
        request.resource.data.name is string && 
        request.resource.data.name.size() > 0 &&
        request.resource.data.createdBy == request.auth.uid;
      
      // System admin can update/delete any booth
      // Photobooth admin can only update/delete their own booths
      allow update, delete: if request.auth != null && (
        request.auth.token.system_admin == true || 
        (request.auth.token.photobooth_admin == true && resource.data.createdBy == request.auth.uid)
      );
    }

    // Bookings: users can create bookings for themselves; owners, booth admins, and system admins can read/manage
    match /bookings/{bookingId} {
      // Create: authenticated user and userId must match requester
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Read: booking owner, photobooth_admin, or system_admin
      allow read: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.auth.token.system_admin == true ||
        request.auth.token.photobooth_admin == true
      );

      // Update / delete: owner or admins
      allow update, delete: if request.auth != null && (
        resource.data.userId == request.auth.uid ||
        request.auth.token.system_admin == true ||
        request.auth.token.photobooth_admin == true
      );
    }

    // Users: owner can read/update own profile; system_admin can read/delete
    match /users/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.system_admin == true);
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.token.system_admin == true;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
